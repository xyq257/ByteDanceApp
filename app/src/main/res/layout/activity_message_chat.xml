<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F8FF">

    <!-- 顶部标题栏：头像 + 名字 + 小图标（都可以动态改） -->
    <!-- 顶部标题栏：整体用稍微深一点的背景色 + 下方阴影，内部再用圆角“气泡卡片”包住头像和文字 -->
    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="6dp"
        android:background="#FFE0E7FF"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <!-- 内层：卡片 / 气泡容器 -->
    <LinearLayout
        android:id="@+id/layout_header_bubble"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/bg_header_bubble">

        <!-- 左侧头像外面再套一层浅色圆形背景，像头像气泡 -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_avatar_bubble"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="2dp">

            <!-- 头像改成真正的圆形 -->
            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:background="@drawable/shape_circle_clip"
                android:padding="0dp" />
        </FrameLayout>

        <!-- 中间：用户名 + 子标题 + 小圆点状态 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <!-- 上面一行：用户名 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="用户名占位"
                    android:textColor="#222222"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- 下面一行：状态小圆点 + 文本 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <View
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:background="@drawable/bg_status_dot_online" />

                <TextView
                    android:id="@+id/tv_user_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="在线"
                    android:textColor="#8890A0"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 底部一条非常淡的分割线，增加层次感 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="#11000000" />

</LinearLayout>

    <!-- 消息列表：用 RecyclerView 动态添加消息 -->
<androidx.recyclerview.widget.RecyclerView
android:id="@+id/rv_messages"
android:layout_width="0dp"
android:layout_height="0dp"
android:paddingHorizontal="8dp"
android:clipToPadding="false"
app:layout_constraintTop_toBottomOf="@id/layout_header"
app:layout_constraintBottom_toTopOf="@id/footer"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    <!-- 底部输入栏：整体是一条有轻微阴影的白色条，里面输入框也是气泡 -->
<LinearLayout
android:id="@+id/footer"
android:layout_width="0dp"
android:layout_height="60dp"
android:orientation="horizontal"
android:padding="8dp"
android:gravity="center_vertical"
android:background="@drawable/bg_footer_bar"
android:elevation="2dp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

<!-- 输入框气泡：用一个外层容器做圆角背景，里面再放 EditText -->
<LinearLayout
    android:id="@+id/layout_input_bubble"
    android:layout_width="0dp"
    android:layout_height="44dp"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@drawable/bg_input_bubble">

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="发送消息"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:textSize="14sp"
        android:maxLines="3" />
</LinearLayout>

<!-- 发送按钮也做成圆角气泡 -->
<TextView
    android:id="@+id/btn_send"
    android:layout_width="70dp"
    android:layout_height="44dp"
    android:layout_marginStart="8dp"
    android:gravity="center"
    android:text="发送"
    android:textColor="#FFFFFF"
    android:textSize="16sp"
    android:background="@drawable/bg_send_bubble" />
</LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>